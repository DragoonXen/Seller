@model Seller.Models.Offer

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
<script type="text/javascript" src="/Scripts/ajaxSetup.js"></script>
<script type="text/javascript" src="/Scripts/browseProductAjax.js"></script>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Offer</legend>

    <div class="display-label">Shop</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Shop.Name)
    </div>

    <div class="display-label">Product</div>
    <div class="display-field">
        <a href="/Products/BrowseProduct?id=@Model.ProductId" class="product_name" data-id="@Model.ProductId">@Model.Product.Name</a>
    </div>

    <div class="display-label">Price</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Price)
    </div>

    <div class="display-label">LastUpdate</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.LastUpdate)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
<div id="productBrowse" />