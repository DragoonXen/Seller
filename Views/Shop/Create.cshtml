@using ViewRes
@model Seller.Models.Shop

@{
    ViewBag.Title = Localization.Shop;
}

<h2>@Localization.Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Localization.Shop</legend>

        <div class="editor-label">
            @Localization.Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Localization.Site
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Site)
            @Html.ValidationMessageFor(model => model.Site)
        </div>

        <div class="editor-label">
            @Localization.Phone
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Phone)
            @Html.ValidationMessageFor(model => model.Phone)
        </div>

        <div class="editor-label">
            @Localization.Address
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Adress)
            @Html.ValidationMessageFor(model => model.Adress)
        </div>

        <div class="editor-label">
            @Localization.Description
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Localization.Email
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div class="editor-label">
            @Localization.Exchange
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Exchange)
            @Html.ValidationMessageFor(model => model.Exchange)
        </div>

        <div class="editor-label">
            @Localization.Image
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Image)
            @Html.ValidationMessageFor(model => model.Image)
        </div>

        <div class="editor-label">
            @Localization.AccountGuid
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AccountGuid)
            @Html.ValidationMessageFor(model => model.AccountGuid)
        </div>

        <p>
            <input type="submit" value="@Localization.Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(@Localization.Back_to_index, "Index")
</div>