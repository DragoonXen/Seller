@model IEnumerable<Seller.Models.Producer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Site
        </th>
        <th>
            LogoPath
        </th>
        <th></th>
    </tr>

