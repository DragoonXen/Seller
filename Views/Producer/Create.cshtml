@model Seller.Models.Producer

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>

@using (Html.BeginForm("Create", "Producer", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Producer</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Site)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Site)
            @Html.ValidationMessageFor(model => model.Site)
        </div>
        @if (Model != null && !String.IsNullOrWhiteSpace(Model.LogoPath))
        {
            <img alt="logo" src="/Content/Images/Producers/@Model.LogoPath"/>
            <input id="LogoPath" name="LogoPath" type="hidden" value="@Model.LogoPath" />
        }
        @Html.ValidationMessageFor(model => model.LogoPath)
        
        <p>
            <input type="file" name="newImage"/>
            <input type="submit" name="submitButtons" value="Apply picture" />
        </p>

        <p>
            <input type="submit" name="submitButtons" value="Create" />
        </p>
    </fieldset>
}
    

<div>
    @Html.ActionLink("Back to products", "RedirectedBack", "Products")
</div>