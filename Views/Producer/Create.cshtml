@using ViewRes
@model Seller.Models.Producer

@{
    ViewBag.Title = Localization.Create;
}

<h2>@Localization.Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>

@using (Html.BeginForm("Create", "Producer", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Localization.Producer</legend>

        <div class="editor-label">
            @Localization.Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Localization.Site
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Site)
            @Html.ValidationMessageFor(model => model.Site)
        </div>
        @if (Model != null && !String.IsNullOrWhiteSpace(Model.LogoPath))
        {
            <img alt="@Localization.Logo" src="/Content/Images/Producers/@Model.LogoPath"/>
            <input id="LogoPath" name="LogoPath" type="hidden" value="@Model.LogoPath" />
        }
        @Html.ValidationMessageFor(model => model.LogoPath)
        
        <p>
            <input type="file" name="newImage"/>
            <button type="submit" name="submitButtons" value="Apply picture" class="cancel">@Localization.Apply_picture</button>
        </p>

        <p>
            <button type="submit" name="submitButtons" value="Create">@Localization.Create</button>
        </p>
    </fieldset>
}
    

<div>
    @Html.ActionLink(Localization.Back_to_producers, "Index", "Producer")
</div>